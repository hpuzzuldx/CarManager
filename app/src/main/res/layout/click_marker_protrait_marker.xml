<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/iv_marker_bg"
            android:layout_width="50mm"
            android:layout_height="61mm"
            android:src="@drawable/marker_oil_station"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <View
            android:id="@+id/select_marker_bg"
            android:layout_width="8mm"
            android:layout_height="8mm"
            android:visibility="visible"
            android:layout_gravity="center"
            android:background="@drawable/selected_oil_shape_drawable"/>
    </FrameLayout>
</LinearLayout>